@model IEnumerable<e_support10.Models.SalesReportP>

@{
    ViewData["Title"] = "Supplies Report";
    
}

<h1>Supplies Report</h1>

@if (Model.Count() == 0)
{
  <h2>No activity in the selected date</h2>
}
else
{

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   
                        @Html.DisplayFor(modelItem => item.Name)
                    
                 
                </td>
                <td>
                   
                        @Html.DisplayFor(modelItem => item.Quantity)
                    
                   
                </td>

                <td>
                   @Html.DisplayFor(modelItem => item.Total)

                    </td>

            </tr>

        }
        <tr>
            <td colspan="2" class="text-right">
                <a asp-controller="Home"  asp-action="Index" class="btn btn-primary">Kthehu</a>


            </td>
           
        </tr>
    </tbody>
</table>
                    }
